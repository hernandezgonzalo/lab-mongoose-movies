<h2 class="h1">Celebrities</h2>
<div class="list list-group col-lg-6">
  <small class="mb-3">{{celebritiesN}}</small>
  {{#each celebrities}}
  <a href="/celebrities/{{this.id}}" class="list-group-item list-group-item-action">
    <h3 class="h3">{{this.name}}</h3>
    <form action="/celebrities/{{this.id}}/delete" method="POST">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <form action="/celebrities/{{this.id}}/edit" method="GET">
      <button type="submit" class="btn btn-primary">Edit</button>
    </form>
  </a>
  {{/each}}
</div>